FROM centos

COPY backend /bin/

ENV BACKEND_HOST 127.0.0.1
ENV BACKEND_PORT 8070

ENV K8S_API_SERVER_HOST 127.0.0.1
ENV K8S_API_SERVER_PORT 6060
ENV K8S_PROTOCOL http

ENV USER_MANAGER_HOST 127.0.0.1
ENV USER_MANAGER_PORT 8060

ENV REGISTRY_HOST 192.168.2.107
ENV REGISTRY_PORT 80


EXPOSE 8070

ENTRYPOINT [./backend]
